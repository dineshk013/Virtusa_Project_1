# Frontend/Dockerfile.prod
FROM nginx:alpine

# Remove default nginx content
RUN rm -rf /usr/share/nginx/html/*

# Copy built browser files (Jenkins ensures Frontend/browser has the built assets)
COPY browser/ /usr/share/nginx/html/

# Copy optional static files (Jenkins will create empty files if not present)
COPY prerendered-routes.json /usr/share/nginx/html/
COPY 3rdpartylicenses.txt /usr/share/nginx/html/

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
